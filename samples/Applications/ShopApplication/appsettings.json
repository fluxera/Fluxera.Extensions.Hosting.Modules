{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Warning",
            "Override": {
                "Microsoft.AspNetCore": "Warning"
            }
        }
    },
    "AllowedHosts": "*",
    "Persistence": {
        "Repositories": {
            "Default": {
                "ProviderName": "EntityFrameworkCore",
                "DatabaseName": "shop",
                "ConnectionStringName": "Database",
                "RepositoryContextType": "ShopApplication.Infrastructure.Contexts.ShopRepositoryContext, ShopApplication",
                "DbContextType": "ShopApplication.Infrastructure.Contexts.ShopDbContext, ShopApplication"
            }
        }
    },
    "ConnectionStrings": {
        "Database": "Server=localhost;Integrated Security=True;TrustServerCertificate=True;",
        "Broker": "localhost"
    }
}
